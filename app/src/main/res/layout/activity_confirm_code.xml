<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.farmarket.farmarket.ConfirmCodeActivity">

    <com.farmarket.farmarket.Fonts.TTCorals
        android:id="@+id/appName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Sign Up"
        android:textColor="@color/veggieGreen"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:textAllCaps="true" />
    <View
        android:id="@+id/underlineView"
        android:layout_width="80dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/veggieGreen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appName"

        ></View>

    <com.farmarket.farmarket.Fonts.TitalliumWebText
        android:id="@+id/slogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Kindly enter the verification code sent to your contact number"
        android:textAlignment="center"
        android:textColor="@color/veggieGreen"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/underlineView" />
    <LinearLayout
        android:layout_marginTop="15dp"
        android:id="@+id/passwordLinearLayout"
        app:layout_constraintTop_toBottomOf="@id/slogan"
        android:layout_width="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="2"
        >

        <EditText
            android:id="@+id/verificationCodeET1"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <EditText
            android:id="@+id/verificationCodeET2"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <EditText
            android:id="@+id/verificationCodeET3"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <EditText
            android:id="@+id/verificationCodeET4"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <EditText
            android:id="@+id/verificationCodeET5"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number" />

        <EditText
            android:id="@+id/verificationCodeET6"
            android:maxLength="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number" />

    </LinearLayout>

    <Button
        android:id="@+id/activateBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="44dp"
        android:layout_marginLeft="50dp"
        android:drawableRight="@drawable/ic_action_next"
        android:layout_marginRight="50dp"
        android:textColor="@color/ghostWhite"
        android:background="@drawable/button_background"
        android:text="Confirm Code"
        app:layout_constraintTop_toBottomOf="@id/passwordLinearLayout"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.farmarket.farmarket.Fonts.TitalliumWebText
        android:id="@+id/resendActivationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Resend Activation Code"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activateBtn" />

    <com.farmarket.farmarket.Fonts.TitalliumWebText
        android:id="@+id/changePhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Change Contact Phone Number"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resendActivationCode" />

    <com.farmarket.farmarket.Fonts.TitalliumWebText
        android:id="@+id/signUpTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Already have an account ? Sign In"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/changePhoneNumber" />

</android.support.constraint.ConstraintLayout>
